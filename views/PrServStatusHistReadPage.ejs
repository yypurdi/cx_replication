<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.ProfileId.label%></td>
                        <td><%=record.profile_id%></td>						
                    </tr><tr>
                        <td><%=resource.CoId.label%></td>
                        <td><%=record.co_id%></td>						
                    </tr><tr>
                        <td><%=resource.Sncode.label%></td>
                        <td><%=record.sncode%></td>						
                    </tr><tr>
                        <td><%=resource.Histno.label%></td>
                        <td><%=record.histno%></td>						
                    </tr><tr>
                        <td><%=resource.Status.label%></td>
                        <td><%=record.status%></td>						
                    </tr><tr>
                        <td><%=resource.Reason.label%></td>
                        <td><%=record.reason%></td>						
                    </tr><tr>
                        <td><%=resource.Transactionno.label%></td>
                        <td><%=record.transactionno%></td>						
                    </tr><tr>
                        <td><%=resource.ValidFromDate.label%></td>
                        <td><%=dateFormat(record.valid_from_date,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.EntryDate.label%></td>
                        <td><%=dateFormat(record.entry_date,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.RequestId.label%></td>
                        <td><%=record.request_id%></td>						
                    </tr><tr>
                        <td><%=resource.RecVersion.label%></td>
                        <td><%=record.rec_version%></td>						
                    </tr><tr>
                        <td><%=resource.UserReason.label%></td>
                        <td><%=record.user_reason%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writePrServStatusHist?profileId=<%=record.profile_id%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deletePrServStatusHist?profileId=<%=record.profile_id%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
