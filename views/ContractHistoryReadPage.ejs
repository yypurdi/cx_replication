<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.CoId.label%></td>
                        <td><%=record.co_id%></td>						
                    </tr><tr>
                        <td><%=resource.ChSeqno.label%></td>
                        <td><%=record.ch_seqno%></td>						
                    </tr><tr>
                        <td><%=resource.ChStatus.label%></td>
                        <td><%=record.ch_status%></td>						
                    </tr><tr>
                        <td><%=resource.ChReason.label%></td>
                        <td><%=record.ch_reason%></td>						
                    </tr><tr>
                        <td><%=resource.ChValidfrom.label%></td>
                        <td><%=dateFormat(record.ch_validfrom,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.ChPending.label%></td>
                        <td><%=record.ch_pending%></td>						
                    </tr><tr>
                        <td><%=resource.Entdate.label%></td>
                        <td><%=dateFormat(record.entdate,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.Userlastmod.label%></td>
                        <td><%=record.userlastmod%></td>						
                    </tr><tr>
                        <td><%=resource.Request.label%></td>
                        <td><%=record.request%></td>						
                    </tr><tr>
                        <td><%=resource.RecVersion.label%></td>
                        <td><%=record.rec_version%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writeContractHistory?coId=<%=record.co_id%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deleteContractHistory?coId=<%=record.co_id%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
